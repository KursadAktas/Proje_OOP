@using Proje_OOP.Entity;
@model List<Product>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger">Sil</a></td>
            <td><a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a></td>

        </tr>
    }


</table>
<a href="/Product/AddProduct" class="btn btn-primary">Ürün Ekle</a>

